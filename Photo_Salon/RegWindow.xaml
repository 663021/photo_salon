            <ColumnDefinition Width="290"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image x:Name="image" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.RowSpan="3" Stretch="Fill"/>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" MediaEnded="mediaElement_MediaEnded" Grid.RowSpan="3"/>
        <Label x:Name="label1" Content="" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Grid.Column="1" FontSize="16" Grid.RowSpan="3" Background="#66171717"/>
        <Label x:Name="label2" Content="Приложение для фотосалона" HorizontalAlignment="Left" Margin="431,253,0,0"  VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Width="369" Height="69" Grid.Column="1" Foreground="White"/>
        <Label x:Name="label3" Content="ИП Ниникина" HorizontalAlignment="Left" Margin="645,281,-106,0"  VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Width="305" Height="69" Grid.Column="1" Foreground="#FF9276DE"/>

        <Label x:Name="label" Content="Регистрация"  HorizontalAlignment="Center" Margin="81,23,53,0" VerticalAlignment="Top" Grid.Column="0" FontSize="18" Foreground="White" Width="156"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="43,185,0,0" TextWrapping="Wrap" Text="" Grid.Column="0" VerticalAlignment="Top" Width="200" Foreground="White" TextChanged="TextBox_TextChanged"/>
        <Label x:Name="label_Copy" Content="Логин" HorizontalAlignment="Left" Margin="43,157,0,0" Grid.Column="0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="label_Copy1" Content="Пароль" HorizontalAlignment="Left" Margin="43,222,0,0" Grid.Column="0" VerticalAlignment="Top" Foreground="White"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="43,250,0,0" Grid.Column="0" VerticalAlignment="Top" Width="200" PasswordChanged="PasswordBox_PasswordChanged" />
