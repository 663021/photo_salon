        <Label x:Name="label_Copy2" Content="by Pavel Podrebinkun" HorizontalAlignment="Left" Margin="79,533,0,0" Grid.Column="0" VerticalAlignment="Top" Foreground="#FF9276DE" FontSize="12"/>
        <Label x:Name="label_Copy3" Content="" HorizontalAlignment="Left" Margin="10,519,0,0" Grid.Column="0" VerticalAlignment="Top" Foreground="#FF9276DE" FontSize="12" Width="270" Background="#FF9276DE" Height="1"/>
        <Button x:Name="button_Copy" Content="Назад" HorizontalAlignment="Left" Margin="43,429,0,0" Grid.Column="0" VerticalAlignment="Top" Width="200" Foreground="White" Click="Button_Copy_Click"/>
        <Label x:Name="label_Copy4" Content="" HorizontalAlignment="Left" Margin="10,80,0,0" Grid.Column="0" VerticalAlignment="Top" Foreground="#FF9276DE" FontSize="12" Width="270" Background="#FF9276DE" Height="1"/>
        <Label x:Name="label_Copy5" Content="Повторите пароль" HorizontalAlignment="Left" Margin="43,290,0,0" Grid.Column="0" VerticalAlignment="Top" Foreground="White"/>
        <PasswordBox x:Name="passwordBox_Copy" HorizontalAlignment="Left" Margin="43,318,0,0" Grid.Column="0" VerticalAlignment="Top" Width="200" PasswordChanged="PasswordBox_PasswordChanged" />
        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="23" Margin="44,119,0,0" TextWrapping="Wrap" Text="" Grid.Column="0" VerticalAlignment="Top" Width="200" Foreground="White" TextChanged="TextBox_TextChanged"/>
        <Label x:Name="label_Copy6" Content="ФИО" HorizontalAlignment="Left" Margin="44,91,0,0" Grid.Column="0" VerticalAlignment="Top" Foreground="White"/>

